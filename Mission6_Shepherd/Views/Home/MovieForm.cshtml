@{
    ViewData["Title"] = "Add Movie";
}
<!-- Sets the page title -->

<h1>Add a Movie</h1>
<!-- Page heading -->

<form method="post">
    <!-- Form that submits movie data -->

    <!-- Required fields -->

    <label for="Category">Category:</label>
    <input type="text" id="Category" name="Category" required />
    <!-- Movie category -->
    <br /><br />

    <label for="Title">Title:</label>
    <input type="text" id="Title" name="Title" required />
    <!-- Movie title -->
    <br /><br />

    <label for="Year">Year:</label>
    <input type="number" id="Year" name="Year" required />
    <!-- Movie release year -->
    <br /><br />

    <label for="Director">Director:</label>
    <input type="text" id="Director" name="Director" required />
    <!-- Movie director -->
    <br /><br />

    <label for="Rating">Rating:</label>
    <select id="Rating" name="Rating" required>
        <option value="">-- Select --</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <!-- Movie rating -->
    <br /><br />

    <!-- Optional fields -->

    <label for="Edited">Edited:</label>
    <select id="Edited" name="Edited">
        <option value="">-- Select --</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <!-- Indicates if the movie was edited -->
    <br /><br />

    <label for="LentTo">Lent To:</label>
    <input type="text" id="LentTo" name="LentTo" />
    <!-- Who the movie was lent to -->
    <br /><br />

    <label for="Notes">Notes (max 25 chars):</label>
    <input type="text" id="Notes" name="Notes" maxlength="25" />
    <!-- Additional notes -->
    <br /><br />

    <button type="submit">Add Movie</button>
    <!-- Submits the form -->
</form>