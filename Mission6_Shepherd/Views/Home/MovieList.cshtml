@model List<Mission6_Shepherd.Models.Movie>

<h1 class="mb-3">Joel Hilton Movie Collection</h1>

<!-- Button to add a new movie -->
<a class="btn btn-primary mb-3" asp-controller="Home" asp-action="MovieForm">Add Movie</a>

<!-- Bootstrap table to display all movies -->
<table class="table table-striped table-bordered table-hover align-middle">
    <thead class="table-dark">
    <tr>
        <th>Title</th>
        <th>Category</th>
        <th>Year</th>
        <th>Director</th>
        <th>Rating</th>
        <th>Edited</th>
        <th>Copied To Plex</th>
        <th style="width: 170px;">Actions</th>
    </tr>
    </thead>

    <tbody>
    <!-- Loop through each movie in the model -->
    @foreach (var m in Model)
    {
        <tr>
            <!-- Basic movie info -->
            <td>@m.Title</td>

            <!-- Displays category name using navigation property -->
            <td>@(m.Category != null ? m.Category.CategoryName : "")</td>

            <td>@m.Year</td>
            <td>@m.Director</td>
            <td>@m.Rating</td>

            <!-- Converts boolean values into Yes/No for readability -->
            <td>@(m.Edited == true ? "Yes" : m.Edited == false ? "No" : "")</td>
            <td>@(m.CopiedToPlex == true ? "Yes" : m.CopiedToPlex == false ? "No" : "")</td>

            <!-- Edit and Delete action buttons -->
            <td>
                <a class="btn btn-sm btn-warning"
                   asp-controller="Home"
                   asp-action="Edit"
                   asp-route-id="@m.MovieId">
                    Edit
                </a>

                <a class="btn btn-sm btn-danger"
                   asp-controller="Home"
                   asp-action="Delete"
                   asp-route-id="@m.MovieId">
                    Delete
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>